{
  "name": "backend-for-frontends-template",
  "version": "0.1.0",
  "description": "A template application to be used by the Digital Development Team at the Department of Information Technology of Kurdistan Regional Government for implementing a basic Backend-for-Frontends Pattern that handles all oAuth2 and Open-ID Operations on behalf of the client and reverse proxies the request to protected resources.",
  "main": "index.js",
  "repository": "https://github.com/ditkrg/backend-for-frontends-template",
  "author": "Brusk Hamarash",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start:prod": "node dist/src/index.js",
    "start:dev": "NODE_ENV=development nodemon -r dotenv/config",
    "start:compiler": "tsc -w"
  },
  "dependencies": {
    "@sentry/node": "^6.4.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.5",
    "fastify": "^3.15.0",
    "fastify-cookie": "^5.3.1",
    "fastify-healthcheck": "^3.1.0",
    "fastify-http-proxy": "^5.0.0",
    "fastify-status": "^2.2.1",
    "hyperid": "^2.1.0",
    "openid-client": "^4.7.2",
    "os": "^0.1.1",
    "redis": "^4.0.0"
  },
  "devDependencies": {
    "@types/config": "^0.0.38",
    "@types/node": "^14.14.41",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
